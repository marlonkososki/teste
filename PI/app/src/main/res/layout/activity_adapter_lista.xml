<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNomeResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="left"
            android:text="Responsavel"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTempoResponsavel"
            android:layout_width="13dp"
            android:layout_height="20dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="Tempo"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPeriodoDependente"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:gravity="left"
            android:text="PerÃ­odo"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNomeDependente"
            android:layout_width="13dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Dependente"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="__________________________________"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp" />

</LinearLayout>